<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CalangoFlix</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/netflix-theme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/imagens/CalangoFlix-logo.png" alt="Logo" class="logo me-2" />
                <span class="fw-bold">CalangoFlix</span>
            </a>

            <!-- Navbar toggler for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" asp-area="" asp-controller="Filme" asp-action="Index"></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" asp-area="" asp-controller="Produtora" asp-action="Index"></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" asp-area="" asp-controller="Genero" asp-action="Index"></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Main Content -->
<div class="container mt-4 flex-grow-1">
    <main role="main" class="pb-3">
            @RenderBody()
    </main>
</div>

<!-- Footer -->
<footer class="footer bg-dark text-light py-4 mt-auto">
    <div class="container text-center">
        <p class="mb-0">&copy; 2024 - CalangoFLix</p>
        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Política de Privacidade</a>
    </div>
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
