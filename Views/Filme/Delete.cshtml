@model Locadora.Models.Filme

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css"> <!-- Referência ao arquivo CSS -->
</head>
<body class="bg-dark text-white">

    <div class="container mt-5">
        <h1 class="text-center text-danger display-4">Deletar Filme</h1>
        <div class="card bg-dark text-white p-4 shadow-lg rounded">
            <h3 class="text-warning">Você realmente quer deletar este filme ?</h3>
            <hr class="bg-danger">

            <div class="row">
                <div class="col-md-12">
                    <h4>Detalhes</h4>
                    <dl class="row">
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Preco)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Preco)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Emprestimo)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Emprestimo)
                        </dd>
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Devolucao)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Devolucao)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Generos)
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model.Generos != null && Model.Generos.Any())
                            {
                                @foreach (var genero in Model.Generos)
                                {
                                    @genero.Nome
                                }
                            }
                            else
                            {
                                <span class="text-muted">No genres available</span>
                            }
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Produtora)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Produtora.ProdNome)
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger btn-lg">Deletar</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Voltar a lista</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
