@model IEnumerable<Locadora.Models.Filme>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="~/css/netflix-theme.css" />
}

<h1 class="text-center text-light">Filmes</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-danger">Criar Novo Filme</a>
</p>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Preco)</th>
            <th>@Html.DisplayNameFor(model => model.Emprestimo)</th>
            <th>@Html.DisplayNameFor(model => model.Devolucao)</th>
            <th>@Html.DisplayNameFor(model => model.Produtora)</th>
            <th>Gêneros</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                <td>@Html.DisplayFor(modelItem => item.Emprestimo)</td>
                <td>@Html.DisplayFor(modelItem => item.Devolucao)</td>
                <td>@Html.DisplayFor(modelItem => item.Produtora.ProdNome)</td>
                <td>
                    @if (item.Generos != null && item.Generos.Any())
                    {
                        @foreach (var genero in item.Generos)
                        {
                            <span class="badge bg-danger">@genero.Nome</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Sem gêneros disponíveis</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
