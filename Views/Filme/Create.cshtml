@model Locadora.Models.Filme

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css"> <!-- Referência ao arquivo CSS -->
</head>
<body class="bg-dark text-white">

    <div class="container mt-5">
        <h1 class="text-center text-danger display-4">Criar novo filme</h1>
        <div class="card bg-dark text-white p-4 shadow-lg rounded">
            <h4 class="text-warning">Coloque os detalhes </h4>
            <hr class="bg-danger">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nome do Filme -->
                <div class="form-group mb-3">
                    <label asp-for="Nome" class="control-label">Nome do filme</label>
                    <input asp-for="Nome" class="form-control" placeholder="Coloque o nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <!-- Preço -->
                <div class="form-group mb-3">
                    <label asp-for="Preco" class="control-label">Preço</label>
                    <input asp-for="Preco" class="form-control" type="number" step="0.01" placeholder="Coloque o preço" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <!-- Data de Empréstimo -->
                <div class="form-group mb-3">
                    <label asp-for="Emprestimo" class="control-label">Emprestimo</label>
                    <input asp-for="Emprestimo" class="form-control" type="date" />
                    <span asp-validation-for="Emprestimo" class="text-danger"></span>
                </div>

                <!-- Data de Devolução -->
                <div class="form-group mb-3">
                    <label asp-for="Devolucao" class="control-label">Devolução</label>
                    <input asp-for="Devolucao" class="form-control" type="date" />
                    <span asp-validation-for="Devolucao" class="text-danger"></span>
                </div>

                <!-- Produtora -->
                <div class="form-group mb-3">
                    <label asp-for="ProdId" class="control-label">Produtora</label>
                    <select asp-for="ProdId" class="form-control" asp-items="ViewBag.Produtoras"></select>
                </div>

                <!-- Gêneros (Checkboxes) -->
                <div class="form-group mb-3">
                    <label class="control-label">Generos</label>
                    <div>
                        @foreach (var genero in (List<SelectListItem>)ViewBag.Generos)
                        {
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="genero_@genero.Value" name="selectedGeneros" value="@genero.Value" />
                                <label class="form-check-label" for="genero_@genero.Value">@genero.Text</label>
                            </div>
                        }
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="form-group mb-3">
                    <input type="submit" value="Criar Filme" class="btn btn-danger w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="text-light">Voltar a lista</a>
    </div>

</body>
</html>
