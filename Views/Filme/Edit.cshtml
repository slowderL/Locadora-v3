@model Locadora.Models.Filme

@{
    ViewData["Title"] = "Editar Filme";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <p class="text-muted text-center">Atualize as informações do filme no formulário abaixo.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label">Nome do Filme</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do filme" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Genero" class="form-label">Gênero</label>
                    <input asp-for="Genero" class="form-control" placeholder="Digite o gênero do filme" />
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Preco" class="form-label">Preço</label>
                    <input asp-for="Preco" class="form-control" placeholder="Digite o preço do filme" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Emprestimo" class="form-label">Disponível para Empréstimo</label>
                    <select asp-for="Emprestimo" class="form-select">
                        <option value="true">Sim</option>
                        <option value="false">Não</option>
                    </select>
                    <span asp-validation-for="Emprestimo" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar à Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
