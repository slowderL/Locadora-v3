@model Locadora.Models.Produtora

@{
    ViewData["Title"] = "Deletar Produtora";
    <link rel="stylesheet" href="~/css/netflix-theme.css" />
}

<body class="bg-dark text-white">

    <div class="container mt-5">
        <h1 class="text-center text-danger display-4">Deletar Produtora</h1>
        <div class="card bg-dark text-white p-4 shadow-lg rounded">
            <h4 class="text-warning">Ao excluir a produtra você excluirá os filmes cadastrados com ela</h4>
            <hr class="bg-danger">

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ProdNome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ProdNome)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ProdCnpj)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ProdCnpj)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ProdEnd)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ProdEnd)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DtCriacao)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DtCriacao)
                </dd>
            </dl>

            <div class="text-center mt-4 d-flex justify-content-center">
                <!-- Botão de Confirmar Delete -->
                <form asp-action="Delete" method="post" onsubmit="return confirm('Tem certeza que deseja excluir?')">
                    <input type="hidden" asp-for="ProdId" />
                    <input type="submit" value="Confirmar Exclusão" class="btn btn-danger btn-lg me-2" />
                </form>

                <!-- Botão de Cancelar -->
                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
            </div>
        </div>
    </div>

</body>
