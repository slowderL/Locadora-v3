@model Locadora.Models.Produtora

@{
    ViewData["Title"] = "Editar Produtora";
    <link rel="stylesheet" href="~/css/netflix-theme.css" />
}

<body class="bg-dark text-white">

    <div class="container mt-5">
        <h1 class="text-center text-danger display-4">Editar Produtora</h1>
        <div class="card bg-dark text-white p-4 shadow-lg rounded">
            <h4 class="text-warning">Atualize os detalhes da produtora</h4>
            <hr class="bg-danger">

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Campo oculto para ID da Produtora -->
                <input type="hidden" asp-for="ProdId" />

                <!-- Nome da Produtora -->
                <div class="form-group mb-3">
                    <label asp-for="ProdNome" class="control-label">Nome da Produtora</label>
                    <input asp-for="ProdNome" class="form-control" placeholder="Digite o nome da produtora" />
                    <span asp-validation-for="ProdNome" class="text-danger"></span>
                </div>

                <!-- CNPJ da Produtora -->
                <div class="form-group mb-3">
                    <label asp-for="ProdCnpj" class="control-label">CNPJ</label>
                    <input asp-for="ProdCnpj" class="form-control" placeholder="Digite o CNPJ" />
                    <span asp-validation-for="ProdCnpj" class="text-danger"></span>
                </div>

                <!-- Endereço da Produtora -->
                <div class="form-group mb-3">
                    <label asp-for="ProdEnd" class="control-label">Endereço</label>
                    <input asp-for="ProdEnd" class="form-control" placeholder="Digite o endereço" />
                    <span asp-validation-for="ProdEnd" class="text-danger"></span>
                </div>

                <!-- Data de Criação da Produtora -->
                <div class="form-group mb-3">
                    <label asp-for="DtCriacao" class="control-label">Data de Criação</label>
                    <input asp-for="DtCriacao" class="form-control" type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DtCriacao" class="text-danger"></span>
                </div>

                <!-- Botões de Ação -->
                <div class="form-group">
                    <input type="submit" value="Salvar Alterações" class="btn btn-danger w-100" />
                </div>
            </form>

            <!-- Botão de Cancelar -->
            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-secondary w-100">Voltar para a lista</a>
            </div>
        </div>
    </div>

</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
